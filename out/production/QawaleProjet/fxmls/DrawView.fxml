<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DrawController">
   <children>
      <ImageView fitHeight="410.0" fitWidth="600.0">
         <image>
            <Image url="@../ressources/draw.jpg" />
         </image>
      </ImageView>
      <Label layoutX="196.0" layoutY="47.0" text="EGALITE !" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="48.0" />
         </font>
      </Label>
      <Label layoutX="71.0" layoutY="206.0" text="Prochaine partie sera la bonne..." textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="36.0" />
         </font>
      </Label>
      <Button fx:id="retour" layoutX="233.0" layoutY="333.0" mnemonicParsing="false" onMouseClicked="#retourLobby" onMouseEntered="#entrer" onMouseExited="#sortie" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20;" text="Retour au lobby" visible="false">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="quitter" layoutX="417.0" layoutY="332.0" mnemonicParsing="false" onMouseClicked="#quitterJeu" onMouseEntered="#entrerQuitter" onMouseExited="#sortieQuitter" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20;" text="Quitter le jeu" visible="false">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="rejouer" layoutX="269.0" layoutY="332.0" mnemonicParsing="false" onMouseClicked="#rejouerPartie" onMouseEntered="#entrerRejouer" onMouseExited="#sortieRejouer" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20;" text="Rejouer" visible="false">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="menu" layoutX="40.0" layoutY="333.0" mnemonicParsing="false" onMouseClicked="#retourMenu" onMouseEntered="#entrerMenu" onMouseExited="#sortieMenu" prefHeight="37.0" prefWidth="169.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20;" text="Revenir au menu" visible="false">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
   </children>
</AnchorPane>
